rem(value)
  if (value is 'auto' || value is 'inherit')
    return value
  u = unit(value)
  if (u is 'px')
    return unit(value/16, 'rem')
  else
    return unit(value, u)

em(value)
  if (value is 'auto' || value is 'inherit')
    return value
  u = unit(value)
  if (u is 'px')
    return unit(value/16, 'em')
  else
    return unit(value, u)

cent($target, $context)
  $target / $context * 100%
